<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Variaveis.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("scripts", required: false)
</head>

<body>
    <div class="content">
        <nav class="navbar navbar-expand-lg  custom-navbar" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
            <a class="navbar-brand" style="color:lawngreen; font-size: 50px" asp-action="Index" asp-controller="Home">E-duCommerce</a>
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="Home">Página inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="AdminPedidos">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="AdminProduto">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="AdminCategorias">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="AdminRelatorioVendas">Relatório de vendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" style="color:lightgray" aria-current="page" asp-action="Index" asp-controller="AdminImagens">Gerenciar Imagens</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Gráfico de vendas
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGraficoController" asp-action="Index">Vendas anuais</a></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGraficoController" asp-action="VendasMensal" asp-route-dias="30">Vendas mensais</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AdminGraficoController" asp-action="VendasSemanal" asp-route-dias="7">Vendas semanais</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                @await Html.PartialAsync("_LoginPartial")
                @await Html.PartialAsync("_AdmPartial")
            </div>
        </nav>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderBody()
    </div>
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            var content = document.querySelector('.content');

            if (sidebar.style.width === '250px') {
                sidebar.style.width = '0';
                content.style.marginLeft = '0';
            } else {
                sidebar.style.width = '250px';
                content.style.marginLeft = '250px';
            }
        }
    </script>
</body>
</html>
