@using EduCommerceWeb.Areas.Admin.ViewModel;
@model EditProdutoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-area="Admin" asp-controller="AdminProduto" asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Produto.Nome" class="control-label"></label>
                <input asp-for="@Model.Produto.Nome" class="form-control" />
                <span asp-validation-for="@Model.Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.Preco" class="control-label"></label>
                <input asp-for="@Model.Produto.Preco" class="form-control" />
                <span asp-validation-for="@Model.Produto.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.DataEntrada" class="control-label"></label>
                <input asp-for="@Model.Produto.DataEntrada" class="form-control" />
                <span asp-validation-for="@Model.Produto.DataEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.Quantidade" class="control-label"></label>
                <input asp-for="@Model.Produto.Quantidade" class="form-control" />
                <span asp-validation-for="@Model.Produto.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.ImagemUrl" class="control-label"></label>
                <input asp-for="@Model.Produto.ImagemUrl" class="form-control" />
                <span asp-validation-for="@Model.Produto.ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.DescricaoCurta" class="control-label"></label>
                <input asp-for="@Model.Produto.DescricaoCurta" class="form-control" />
                <span asp-validation-for="@Model.Produto.DescricaoCurta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.AntigoPreco" class="control-label"></label>
                <input asp-for="@Model.Produto.AntigoPreco" class="form-control" />
                <span asp-validation-for="@Model.Produto.AntigoPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.AVista" class="control-label"></label>
                <input asp-for="@Model.Produto.AVista" class="form-control" />
                <span asp-validation-for="@Model.Produto.AVista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.PrecoSecundario" class="control-label"></label>
                <input asp-for="@Model.Produto.PrecoSecundario" class="form-control" />
                <span asp-validation-for="@Model.Produto.PrecoSecundario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.MaxVezes" class="control-label"></label>
                <input asp-for="@Model.Produto.MaxVezes" class="form-control" />
                <span asp-validation-for="@Model.Produto.MaxVezes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Produto.IdCategoria" class="control-label"></label>
                <select asp-for="@Model.Produto.IdCategoria" class="form-control">
                    @foreach (var item in Model.ListCategorias)
                    {
                        <option value="@item.IdCategoria">@item.CategoriaNome</option>
                    }
                </select>
                <span asp-validation-for="@Model.Produto.IdCategoria class=" text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

