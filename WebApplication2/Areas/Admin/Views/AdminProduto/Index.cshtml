@model IEnumerable<Produto>

@{
    ViewData["Title"] = "Lista de produtos";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create">Criar novo produto</a>
</p>
<table class="table" style="color: white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AntigoPreco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AVista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoSecundario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxVezes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AntigoPreco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AVista)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoSecundario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxVezes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoria)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProduto">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProduto">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProduto">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
