@using WebApplication2.ViewModel;
@model ProdutoViewModel
@{
    ViewData["Title"] = "E-duCommerce, Seja bem-vindo a tecnologia!";

}
@if (TempData["Sucesso"] != null)
{
    <script>
        alert('@TempData["Sucesso"]');
    </script>
}

<link rel="stylesheet" href="~/css/PaginaInicial.css" />
<picture>
    <img class="natal" src="~/Imagens/campp.jpg" alt="campanha_de_natal" />
</picture>
<section>

    <div class="banneratras">
        <div class="bannerup">
            @foreach (var produto in Model.Produtos)
            {
                <div class="card-deck">
                    <partial name="_SearchBy" for="@produto" />
                </div>
            }
        </div>
    </div>
</section>