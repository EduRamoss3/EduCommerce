@model Usuario;
<link rel="stylesheet" href="~/css/Formulario.css" />
<div class="container">
  <form class="formulario" asp-action="Create">
      <label> Insira suas informações aqui </label>
    <div class="form-group">
      <label asp-for="Nome" class="col-form-label"></label>
      <input asp-for="Nome" class="inputs" placeholder="Nome completo" />
    </div>
    <div class="form-group">
        <label asp-for="Senha" class="control-label"></label>
        <input placeholder="Senha" type="password" asp-for="Senha" class="inputs" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input placeholder="Email" asp-for="Email" class="inputs" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateNasc" class="control-label"></label>
        <input type="date" asp-for="DateNasc" class="inputs" />
        <span asp-validation-for="DateNasc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CPF" class="control-label"></label>
        <input placeholder="CPF" type="text" asp-for="CPF" class="inputs" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
  </form>
</div>